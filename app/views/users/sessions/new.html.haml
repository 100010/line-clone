%body.am-splash-screen
  .am-wrapper.am-login
    .am-content
      .main-content
        .login-container
          .panel.panel-default
            .panel-heading
              %span Please enter your user information.
            .panel-body
              = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
                = devise_error_messages!
                .login-form
                  .form-group
                    .input-group
                      %span.input-group-addon
                        %i.icon.s7-user
                      = f.email_field :email, autofocus: true, class: "form-control", id: "username", placeholder: 'your email address'
                  .form-group
                    .input-group
                      %span.input-group-addon
                        %i.icon.s7-lock
                      = f.password_field :password, class: "form-control", placeholder: 'password'
                  .form-group.login-submit
                    %button.btn.btn-primary.btn-lg{type: "submit"} Log me in
                  .form-group.footer.row
                    .col-xs-6
                      %a{:href => "#"} Forgot Password?
                    .col-xs-6.remember
                      %label{:for => "remember"} Remember Me
                      .am-checkbox
                        %input#remember{:type => "checkbox"}/
                        %label{:for => "remember"}
