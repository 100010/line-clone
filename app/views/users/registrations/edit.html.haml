.col-md-12
  .panel.panel-default
    .panel-heading
      %h3 Basic Elements
    .panel-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal group-border-dashed', style: 'border-radius: 0px;' }) do |f|
        = devise_error_messages!
        .form-group
          %label.col-sm-3.control-label username
          .col-sm-6
            = f.text_field :name, class: 'form-control'
        .form-group
          %label.col-sm-3.control-label image
          .col-sm-6
            = f.file_field :image, class: 'form-contol'
        .form-group
          %label.col-sm-3.control-label password
          .col-sm-6
            = f.password_field :current_password, class: 'form-contol'
        .form-group
          .col-sm-offset-3.col-sm-2
            = f.submit 'done', class: 'btn btn-primary'
